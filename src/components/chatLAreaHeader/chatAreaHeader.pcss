}
.header__menu-item:hover {
  cursor: pointer;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
}
.menu-item__text {
  font-size: 12px;
  font-weight: 500;
  color: #1e1e1e;
}
