.container {
  box-shadow: 0 0 10px rgb(0 0 0 / 10%);
  display: grid;
  grid-template-columns: 310px 1fr;
  margin: 0 auto;
  min-height: 720px;
  text-align: center;
  width: 1280px;
}

ul {
  margin: 0;
}

.aside {
  display: flex;
  flex-direction: column;
  padding: 0;
}

.menu-item__text {
  color: #1e1e1e;
  font-size: 12px;
  font-weight: 500;
}
